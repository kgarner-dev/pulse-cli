{
    "name": "@kaleb.garner/pulse",
    "version": "1.0.1",
    "description": "The open-source, context-aware compliance engine for healthcare frontends.",
    "type": "module",
    "main": "./dist/index.js",
    "bin": {
        "pulse": "./dist/index.js"
    },
    "files": [
        "dist"
    ],
    "private": false,
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "esbuild src/audit.ts --bundle --platform=node --format=esm --outfile=dist/index.js --external:playwright --external:chalk --banner:js=\"#!/usr/bin/env node\"",
        "start": "node dist/index.js",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "pulse",
        "cli",
        "hipaa",
        "scanner",
        "compliance"
    ],
    "author": "Kaleb Garner",
    "license": "MIT",
    "dependencies": {
        "@kaleb.garner/pulse-core": "^1.0.0",
        "chalk": "^5.3.0",
        "playwright": "^1.41.0"
    },
    "devDependencies": {
        "@types/node": "^25.2.3",
        "esbuild": "^0.27.3",
        "tsx": "^4.7.1",
        "typescript": "^5.3.3"
    }
}