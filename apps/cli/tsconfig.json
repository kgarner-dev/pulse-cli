{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@pulse/core": [
                "../../packages/core/src/loader.ts"
            ],
            "@pulse/core/*": [
                "../../packages/core/src/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "references": [
        {
            "path": "../../packages/core"
        }
    ]
}